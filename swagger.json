{
  "swagger": "2.0",
  "info": {
    "title": "Pets and Users API",
    "description": "Project for CSE341",
    "version": "1.0.0"
  },
  "host": "cse341pets.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/pets": {
      "get": {
        "description": "Get all pet records",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a pet record",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Fluffy" },
                "species": { "example": "Dog" },
                "breed": { "example": "Labrador" },
                "age": { "example": 3 },
                "adoption_status": { "example": "Available" },
                "description": { "example": "Friendly and energetic" },
                "image": { "example": "http://example.com/image.jpg" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "description": "Get a single pet record",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update a pet record by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Updated Name" },
                "species": { "example": "Updated Species" },
                "breed": { "example": "Updated Breed" },
                "age": { "example": 4 },
                "adoption_status": { "example": "Adopted" },
                "description": { "example": "Updated Description" },
                "image": { "example": "http://example.com/updated-image.jpg" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated successfully" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a pet record",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "Deleted successfully" },
          "404": { "description": "Not Found" }
        }
      }
    },
    "/users": {
      "get": {
        "description": "Get a list of users",
        "responses": {
          "200": {
            "description": "List of users",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "user123" },
                  "name": { "type": "string", "example": "John Doe" },
                  "email": { "type": "string", "example": "john.doe@example.com" }
                }
              }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Jane Doe" },
                "email": { "type": "string", "example": "jane.doe@example.com" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "User created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "Get a single user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "User found" },
          "404": { "description": "User not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update an existing user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Updated Name" },
                "email": { "example": "updated@example.com" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "User updated successfully" },
          "404": { "description": "User not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "User deleted successfully" },
          "404": { "description": "User not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
